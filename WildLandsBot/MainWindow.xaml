                        <RowDefinition Height="90*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock VerticalAlignment="Stretch"
                               Grid.Row="0" 
                               Grid.Column="0"
                               Text="Сообщение пользователя"                               
                               FontSize="14"
                               Background="White"
                               Margin="5" 
                               RenderTransformOrigin="0.5,0.5" 
                               TextAlignment="Center">
                        <TextBlock.ContextMenu>
                            <ContextMenu/>
                        </TextBlock.ContextMenu>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Stretch" 
                               VerticalAlignment="Stretch"
                               Grid.Row="0" 
                               Grid.Column="2"
                               Text="Ответ бота"                               
                               FontSize="14"
                               Background="White"  
                               TextAlignment="Center"
                               Margin="5"/>
                    
                    <ListBox x:Name ="ghostsLoglist" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Stretch"
                             Grid.Column="0"
                             Grid.Row="1"
                             Margin="5" 
                             Grid.RowSpan="2">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Black" 
                                        Margin="5" 
                                        BorderThickness="1" 
                                        CornerRadius="10">
                                    <StackPanel Margin="10">
                                        
                                        <TextBlock Text="{Binding FirstName}" 
                                                   Margin="0" 
                                                   FontSize="15"/>
                                        
                                        <TextBlock Text="{Binding Msg}" 
                                                   Margin="0" 
                                                   FontSize="20"/>
                                        
                                        <TextBlock Text="{Binding Time}" 
                                                   Margin="10 0" 
                                                   FontSize="10"
                                                   Foreground="Gray" 
                                                   TextAlignment="Right"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <ListBox x:Name="ghostsLoglistBot"
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Stretch" 
                             Grid.Column="2"
                             Grid.Row="1"
                             Margin="5" 
                             Grid.RowSpan="2">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Black" 
                                        Margin="5" 
                                        BorderThickness="1" 
                                        CornerRadius="10">

                                    <StackPanel Margin="10">
                                        <TextBlock Text="{Binding FirstName}" 
                                                   Margin="0" 
                                                   FontSize="15"/>

                                        <TextBlock Text="{Binding Msg}" 
                                                   Margin="0" 
                                                   FontSize="20"/>

                                        <TextBlock Text="{Binding Time}" 
                                                   Margin="10 0" 
                                                   FontSize="10"
                                                   Foreground="Gray" 
                                                   TextAlignment="Right"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <GridSplitter Grid.Column="3" 
                                  Grid.RowSpan="5" 
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch" 
                                  Background="Gray" 
                                  Opacity="50"
                                  Width="3"/>

                    <GridSplitter Grid.Column="1" 
                                  Grid.RowSpan="5" 
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch" 
                                  Background="Gray" 
                                  Opacity="50"
                                  Width="3"/>

                    <GroupBox Grid.Column="4" 
                              HorizontalAlignment="Stretch" 
                              VerticalAlignment="Stretch" 
                              Margin="5" 
                              Grid.RowSpan="2"
                              Background="White">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="10*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*"/>
                                <ColumnDefinition Width="50*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock HorizontalAlignment="Stretch" 
                                       Grid.Row="0" 
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="Отправка сообщения" 
                                       VerticalAlignment="Stretch"
                                       FontSize="14"
                                       Background="White"  
                                       TextAlignment="Center"
                                       Margin="5"/>
                            
                            <TextBlock x:Name="ghostsTargetSend"
                                       Text="{Binding ElementName=ghostsLoglist, Path=SelectedItem.Id}"
                                       HorizontalAlignment="Stretch" 
                                       Grid.Row="1" 
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       VerticalAlignment="Stretch"
                                       FontSize="14"
                                       Background="White" 
                                       TextAlignment="Center"
                                       Margin="5"/>
                            
                            <TextBox x:Name="ghostsTxtMsgSend" 
                                     Grid.ColumnSpan="2" 
                                     HorizontalAlignment="Stretch" 
                                     Margin="5" 
                                     Grid.Row="2" 
                                     VerticalAlignment="Stretch"/>
                            
                            <Button Content="Отправить" 
                                    HorizontalAlignment="Stretch" 
                                    Margin="5" 
                                    Grid.Row="3" 
                                    VerticalAlignment="Stretch" 
                                    Grid.Column="0" 
                                    Click="GhostsBtnGhostsClick"/>

                            <Button x:Name="ghostsBtnRefresh" 
                                    Content="Обновить" 
                                    HorizontalAlignment="Stretch" 
                                    Margin="5" 
                                    Grid.Row="3" 
                                    VerticalAlignment="Stretch" 
                                    Grid.Column="1" 
                                    Click="cartelBtnRefresh_Click"/>

                            <TextBlock HorizontalAlignment="Stretch" 
                                       Grid.Row="4" 
                                       Grid.Column="0"
                                       Text="Миссия 1:" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Background="White" 
                                       TextAlignment="Center"/>

                            <TextBlock x:Name="textGhostsMissionCompleted1"
                                       Text="{Binding GhostsMissionCompleted1}"
                                       HorizontalAlignment="Stretch" 
                                       Grid.Row="4" 
                                       Grid.Column="1"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Background="White" 
                                       TextAlignment="Center"/>

                            <TextBlock HorizontalAlignment="Stretch" 
                                       Grid.Row="5" 
                                       Grid.Column="0"
                                       Text="Миссия 2:" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Background="White" 
                                       TextAlignment="Center"/>

                            <TextBlock x:Name="textGhostsMissionCompleted2"
                                       Text="{Binding GhostsMissionCompleted2}"
                                       HorizontalAlignment="Stretch" 
                                       Grid.Row="5" 
                                       Grid.Column="1"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Background="White" 
                                       TextAlignment="Center"/>

                            <TextBlock HorizontalAlignment="Stretch" 
                                       Grid.Row="6" 
                                       Grid.Column="0"
                                       Text="Миссия 3:" 
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Background="White" 
                                       TextAlignment="Center"/>

                            <TextBlock x:Name="textGhostsMissionCompleted3"
                                       Text="{Binding GhostsMissionCompleted3}"
                                       HorizontalAlignment="Stretch" 
                                       Grid.Row="6" 
                                       Grid.Column="1"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Background="White" 
                                       TextAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
